<form action="/deals/update" method="POST">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Item</th>
                <th>Capacity</th>   
                <th>Size</th>
            </tr>
        </thead>
        <tbody>
            <% for( let index = 0; index < deals.length; index++ ) { %>
                <tr>
                    <td><input type="text" name="deals[<%=index%>][title]" value="<%= deals[index].title %>" required></td>
                    <td><input type="number" name="deals[<%=index%>][capacity]" value="<%= deals[index].capacity %>" required></td>
                    <td><input type="number" name="deals[<%=index%>][size]" value="<%= deals[index].size %>" required></td>
                    <td><a href="/deals/remove-from-cart/<%= deals[index]._id %>" class="btn btn-danger">Remove</a></td>
                </tr>
            <% } %>
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <th><%= total %></th>
            </tr>
        </tfoot>
    </table>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
